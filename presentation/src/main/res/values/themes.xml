    <!-- Base application theme. -->
    <style name="Theme.Flux" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
    </style>

    <style name="Theme.Flux.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Flux.Splash" parent="Theme.Flux.NoActionBar">
        <item name="android:statusBarColor">@color/background_color</item>
        <item name="android:windowBackground">@drawable/splash_screen_background</item>
        <item name="android:navigationBarColor">@color/background_color</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">@bool/use_light_status</item>
    </style>

    <style name="Theme.Flux.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Flux.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>